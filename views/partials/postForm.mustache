<form method="POST" action="{{postUrl}}" id="postForm" class="form">
    <div class="form-item">
        <label for="title">Post Title</label>
        <input type="text" name="title" value="{{title}}" required>
    </div>
    <div class="form-item">
        <label for="body">Post Body</label>
        <textarea name="body" form="postForm" cols="30" row="5" required>{{body}}</textarea>
    </div>
    <div class="form-item publish">
        <label for="publish">Publish? </label>
        <input type="checkbox" {{#isPublished}}checked{{/isPublished}} name="publish">
    </div>
    <button class="btn submit">
    {{ buttonLabel }}
    Post</button>
</form>